  "sourceRoot": "packages/elizaos-plugins/cognitive-engine/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/elizaos-plugins/cognitive-engine",
        "main": "packages/elizaos-plugins/cognitive-engine/src/index.ts",
        "tsConfig": "packages/elizaos-plugins/cognitive-engine/tsconfig.lib.json",
        "assets": ["packages/elizaos-plugins/cognitive-engine/*.md"]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test {projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx @biomejs/biome check --write {projectRoot}"
      }
    }
  },
  "tags": ["elizaos", "plugin", "cognitive-engine", "ui"]
}