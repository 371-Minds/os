# 371 OS Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ==============================================
# NPM Publishing & Package Management
# ==============================================
NPM_TOKEN=npm_your_token_here
NPM_REGISTRY=https://registry.npmjs.org/

# ==============================================
# Blockchain & Web3 Configuration
# ==============================================
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/your_project_id
REGISTRY_CONTRACT_ADDRESS=0x_your_contract_address_here
PRIVATE_KEY=your_private_key_here

# ==============================================
# IPFS & Decentralized Storage
# ==============================================
IPFS_API_URL=https://ipfs.infura.io:5001
WEB3_STORAGE_TOKEN=your_web3_storage_token
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret

# ==============================================
# Akash Network Configuration
# ==============================================
AKASH_RPC_URL=https://rpc.akash.forbole.com:443
AKASH_CHAIN_ID=akashnet-2
AKASH_KEYRING_BACKEND=os
AKASH_FROM=your_akash_address

# ==============================================
# Development & Testing
# ==============================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ==============================================
# Security & Authentication
# ==============================================
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# ==============================================
# External Integrations
# ==============================================
GITHUB_TOKEN=ghp_your_github_token
PIECES_API_KEY=your_pieces_api_key
POSTHOG_API_KEY=your_posthog_key

# ==============================================
# Database Configuration
# ==============================================
MONGODB_URI=mongodb://localhost:27017/371os
DATABASE_URL=postgresql://user:password@localhost:5432/371os