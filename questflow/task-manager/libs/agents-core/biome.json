{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "formatter": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "ignore": ["dist", "coverage"]
  },
  "test": {
    "include": ["src/**/*.test.ts", "src/**/__tests__/**/*.ts"],
    "globals": {
      "ts-jest": true
    }
  }
}
