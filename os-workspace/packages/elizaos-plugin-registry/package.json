{
  "name": "@elizaos/plugin-registry",
  "version": "1.0.0",
  "description": "Advanced plugin registry system for ElizaOS with hot-reload and security sandboxing",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {
    "@elizaos/core": "^1.5.2",
    "eventemitter3": "^5.0.1",
    "fs-extra": "^11.2.0",
    "chokidar": "^3.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "keywords": [
    "elizaos",
    "plugin",
    "registry",
    "hot-reload",
    "security",
    "sandbox"
  ],
  "author": "371 Minds",
  "license": "MIT"
}