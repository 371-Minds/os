{
  "name": "@elizaos/plugin-business-intelligence",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/elizaos-plugins/business-intelligence/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/elizaos-plugins/business-intelligence",
        "main": "packages/elizaos-plugins/business-intelligence/src/index.ts",
        "tsConfig": "packages/elizaos-plugins/business-intelligence/tsconfig.json",
        "assets": [
          "packages/elizaos-plugins/business-intelligence/*.md",
          "packages/elizaos-plugins/business-intelligence/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/elizaos-plugins/business-intelligence/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/elizaos-plugins/business-intelligence/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  }
}