# 371 OS Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
#
# Security Note: Replace ALL placeholder values with your actual tokens
# - NPM_TOKEN: Get from https://www.npmjs.com/settings/tokens  
# - GITHUB_TOKEN: Generate at https://github.com/settings/tokens
# - Other tokens: See respective service documentation

# ==============================================
# NPM Publishing & Package Management
# ==============================================
NPM_TOKEN=npm_REPLACE_WITH_YOUR_ACTUAL_TOKEN
NPM_REGISTRY=https://registry.npmjs.org/

# ==============================================
# Blockchain & Web3 Configuration
# ==============================================
ETHEREUM_RPC_URL=https://sepolia.infura.io/v3/REPLACE_WITH_YOUR_PROJECT_ID
REGISTRY_CONTRACT_ADDRESS=0xREPLACE_WITH_YOUR_CONTRACT_ADDRESS
PRIVATE_KEY=0xREPLACE_WITH_YOUR_PRIVATE_KEY

# ==============================================
# IPFS & Decentralized Storage
# ==============================================
IPFS_API_URL=https://ipfs.infura.io:5001
WEB3_STORAGE_TOKEN=REPLACE_WITH_YOUR_WEB3_STORAGE_TOKEN
PINATA_API_KEY=REPLACE_WITH_YOUR_PINATA_API_KEY
PINATA_SECRET_KEY=REPLACE_WITH_YOUR_PINATA_SECRET

# ==============================================
# Akash Network Configuration
# ==============================================
AKASH_RPC_URL=https://rpc.akash.forbole.com:443
AKASH_CHAIN_ID=akashnet-2
AKASH_KEYRING_BACKEND=os
AKASH_FROM=REPLACE_WITH_YOUR_AKASH_ADDRESS

# ==============================================
# Development & Testing
# ==============================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# ==============================================
# Security & Authentication
# ==============================================
JWT_SECRET=REPLACE_WITH_YOUR_JWT_SECRET
API_KEY=REPLACE_WITH_YOUR_API_KEY

# ==============================================
# External Integrations
# ==============================================
GITHUB_TOKEN=ghp_REPLACE_WITH_YOUR_GITHUB_TOKEN
PIECES_API_KEY=REPLACE_WITH_YOUR_PIECES_API_KEY
POSTHOG_API_KEY=phc_REPLACE_WITH_YOUR_POSTHOG_KEY

# ==============================================
# Database Configuration
# ==============================================
MONGODB_URI=mongodb://localhost:27017/371os
DATABASE_URL=postgresql://user:password@localhost:5432/371os