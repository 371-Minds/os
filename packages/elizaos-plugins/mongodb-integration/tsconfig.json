{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@elizaos/plugin-nx-workspace": ["../../nx-workspace/src/index.ts"]
    },
    "typeRoots": ["../../../node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../nx-workspace/**/*",
    "../cognitive-engine/**/*",
    "../universal-tool-server/**/*",
    "../../../packages/elizaos-plugins/nx-workspace/**/*",
    "../../../packages/elizaos-plugins/cognitive-engine/**/*",
    "../../../packages/elizaos-plugins/universal-tool-server/**/*",
    "../../../apps/**/*",
    "../../../packages/cognitive-layer/**/*",
    "../../../packages/shared-ui/**/*"
  ]
}
