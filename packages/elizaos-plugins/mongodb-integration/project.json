{
  "name": "mongodb-integration",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/elizaos-plugins/mongodb-integration/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/elizaos-plugins/mongodb-integration/dist",
        "main": "packages/elizaos-plugins/mongodb-integration/src/index.ts",
        "tsConfig": "packages/elizaos-plugins/mongodb-integration/tsconfig.json",
        "assets": []
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test {projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx @biomejs/biome check --write {projectRoot}"
      }
    }
  },
  "tags": ["plugin", "database", "mongodb"]
}