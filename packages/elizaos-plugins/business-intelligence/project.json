{
  "name": "@elizaos/plugin-business-intelligence",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/elizaos-plugins/business-intelligence/src",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/elizaos-plugins/business-intelligence",
        "main": "packages/elizaos-plugins/business-intelligence/src/index.ts",
        "tsConfig": "packages/elizaos-plugins/business-intelligence/tsconfig.json",
        "assets": [
          "packages/elizaos-plugins/business-intelligence/*.md",
          "packages/elizaos-plugins/business-intelligence/package.json"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test {projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx @biomejs/biome check --write {projectRoot}"
      }
    }
  }
}